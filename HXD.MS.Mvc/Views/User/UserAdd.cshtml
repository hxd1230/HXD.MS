@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新增用户</title>
</head>
<body>
    <div style="padding: 15px; overflow: hidden">
        <form id="AddForm" method="post" action="">
            <table class="tableForm" width="100%">
                <tr>
                    <th>
                        用户名：
                    </th>
                    <td>
                        <input type="text" name="txtUserName" id="txtUserName" class="easyui-validatebox textbox"
                               data-options="required:true,validType:'username'" style="width:170px;height:22px;" /><span style="color:gray;">字母开头，允许6-16位，允许字母数字下划线</span>
                    </td>
                </tr>
                <tr>
                    <th>
                        昵称：
                    </th>
                    <td>
                        <input type="text" name="txtNickName" id="txtNickName" class="easyui-validatebox textbox" data-options="required:true,validType:'length[2,20]'" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        手机：
                    </th>
                    <td>
                        <input type="text" name="txtPhone" id="txtPhone" class="easyui-validatebox textbox" data-options="required:false,validType:'mobile'" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        邮箱：
                    </th>
                    <td>
                        <input type="text" name="txtEmail" id="txtEmail" class="easyui-validatebox textbox" data-options="required:false,validType:'email'" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        是否启用：
                    </th>
                    <td>
                        <input type="checkbox" name="cbEnable" id="cbEnable" checked="checked" />
                    </td>
                </tr>@*
                    <tr>
                        <th>
                            是否改密：
                        </th>
                        <td>
                            <input type="checkbox" name="selIfChangepwdAdd" id="selIfChangepwdAdd" />
                        </td>
                    </tr>*@
                <tr>
                    <th>
                        备注：
                    </th>
                    <td>
                        <textarea rows="3" cols="50" name="txtRemark" id="txtRemark" class="easyui-validatebox textbox" data-options="required:false,validType:'length[1,100]'"></textarea>
                    </td>
                </tr>
            </table>
        </form>
    </div>

</body>
</html>
